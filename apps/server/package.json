{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "wrangler deploy --dry-run",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"dev": "wrangler dev --port=3000",
		"start": "wrangler dev",
		"deploy": "wrangler deploy",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings"
	},
	"dependencies": {
		"dotenv": "^17.2.1",
		"zod": "^4.0.2",
		"@orpc/server": "^1.8.4",
		"@orpc/client": "^1.8.4",
		"hono": "^4.8.2",
		"drizzle-orm": "^0.44.2",
		"@neondatabase/serverless": "^1.0.1",
		"ws": "^8.18.3",
		"better-auth": "^1.3.7",
		"pg": "^8.11.3",
		"mysql2": "^3.6.5",
		"sqlite3": "^5.1.6",
		"mongodb": "^6.3.0"
	},
	"devDependencies": {
		"tsdown": "^0.14.1",
		"typescript": "^5.8.2",
		"drizzle-kit": "^0.31.2",
		"@types/ws": "^8.18.1",
		"wrangler": "^4.23.0",
		"@types/node": "^22.13.11",
		"@types/pg": "^8.10.9"
	}
}
